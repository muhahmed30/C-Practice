int maximum(int array[]);

int maximum(int array[])
{
    int maxV;
    maxV=array[0];
    for (int j=0; j<5; j++)
    {
        if (array[j]>maxV)
        {
         maxV=array[j];
        }
    }
    return maxV;
}

int main ()
{
    int a[5], number, elements, max1;
    int i=0;
    printf("Enter number of elements in an array \n");
    scanf("%d", &number);
    printf("Enter array elements \n");
        for (i=0; i<5; i++)
    {
        scanf("%d", &a[i]);
    }
    for (i=0; i<5; i++)
    {
        printf("Element [%d] is [%d] \n", i, a[i]);
    }

    max1 = maximum(a);

    printf("Maximum value is %d \n", max1);


    return 0;
}

